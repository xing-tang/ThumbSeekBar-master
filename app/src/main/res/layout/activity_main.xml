<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    tools:context=".MainActivity">

    <com.open.thumbseekbar.ThumbSeekBar
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        app:thumb_anim_duration="200"
        app:thumb_color="@android:color/white"
        app:thumb_intercept_click="true"
        app:thumb_max="15"
        app:thumb_min="0"
        app:thumb_progress="10"
        app:thumb_progress_drawable="@drawable/layer_default_seekbar"
        app:thumb_progress_max_height="2dp"
        app:thumb_progress_min_height="2dp"
        app:thumb_radius="12dp"
        app:thumb_radius_zoom_on_dragging="3"
        app:thumb_show_tip="true"
        app:thumb_show_tip_always="true" />

</androidx.constraintlayout.widget.ConstraintLayout>